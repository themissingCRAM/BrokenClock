<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="horizontal"
    android:paddingTop="70dp"
    tools:context="com.robotemi.BrokenRecord.BrokenRecord.MainActivity">

    <ScrollView
        android:layout_width="536dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:layout_marginBottom="100px"
                android:onClick="onButtonAClick"
                android:text="GO HERE"></Button>

            <Button
                android:id="@+id/button"
                android:layout_width="486dp"
                android:layout_height="200px"
                android:onClick="onInterruptButtonClicked"
                android:text="Abort Sequence" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="300px"
          
                android:text="Button" />

        </LinearLayout>
    </ScrollView>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>