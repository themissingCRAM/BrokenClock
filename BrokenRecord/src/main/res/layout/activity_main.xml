<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="horizontal"
    android:paddingTop="70dp"
    tools:context="com.robotemi.BrokenRecord.BrokenRecord.MainActivity">

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <Button
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_marginBottom="100dp"
            android:autoSizeTextType="uniform"
            android:onClick="onButtonAClick"
            android:text="Start" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:autoSizeTextType="uniform"
            android:onClick="onInterruptButtonClicked"
            android:text="Abort Sequence" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:autoSizeTextType="uniform"
            android:text="Scheduler"
            android:onClick="goToScheduler"
            >

        </Button>

    </LinearLayout>
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>